# Auto detect
* text=auto eol=lf

# Source code
*.css   text eol=lf diff=css
*.scss  text eol=lf diff=css
*.sass  text eol=lf
*.htm   text eol=lf diff=html
*.html  text eol=lf diff=html
*.ts    text eol=lf
*.js    text eol=lf
*.json  text eol=lf
*.sh    text eol=lf
*.xml   text eol=lf
*.xhtml text eol=lf diff=html

# Documentation
*.markdown text eol=lf diff=markdown
*.md       text eol=lf diff=markdown
*.mdwn     text eol=lf diff=markdown
*.mdown    text eol=lf diff=markdown
*.mkd      text eol=lf diff=markdown
*.mkdn     text eol=lf diff=markdown
*.txt      text eol=lf

# Graphics
*.gif  binary
*.jpeg binary
*.png  binary
*.gz   binary
*.jar  binary

# Fonts
*.ttf   binary
*.eot   binary
*.otf   binary
*.woff  binary
*.woff2 binary

# windows specific file
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Exclude htaccess from diff judgment target
htdocs/.htaccess linguist-vendored
